{% extends 'defaultAdmin.html.twig' %}

{% block body %}

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="admin/dashboard">Dashboard</a>
          </li>
          <li class="breadcrumb-item active">New Comments</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
          <div class="card-header">
            <i class="fas fa-table"></i>
            New Comments</div>
          <div class="card-body">
            {% if posts %}
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Date Added</th>
                    <th>New Comments</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Date Added</th>
                    <th>New Comments</th>
                  </tr>
                </tfoot>
                <tbody>
                  {% for post in posts %}
                  <tr>
                    <td>{{ post.postTitle }}</td>
                    <td>{{ post.userUsername }}</td>
                    <td>{{ post.postLastdate }}</td>
                    <td>{{ post.validation }}</td>
                    <td style="width:140px">
                      <a href="admin/show/{{ post.postId }}" class="btn btn-success" data-target="#update">
                          Go to Article
                      </a>
                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
            {% else %}
            <div>
              No New Comments
            </div>
            {% endif %}
          </div>
        </div>

        {% if posts %}
        {{ block("pagination", "blocks.html.twig") }}
        {% endif %}

{% endblock %}
